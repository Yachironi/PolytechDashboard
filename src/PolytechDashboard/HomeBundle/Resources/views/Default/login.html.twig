{%extends "PolytechDashboardHomeBundle:Default:base.html.twig"%}
{%  block title %}
    Demande d'authentification
{% endblock %}

   {%block body %}
   <body class="login-page">
    <div class="login-box">
      <div class="login-logo">
        <b>Tableau Etudiant</b><br \> Polytech Paris Sud
      </div><!-- /.login-logo -->
      <div class="login-box-body">
        <p class="login-box-msg">Veuillez vous connecter pour demarrer votre session</p>
        <form action="{{path('polytech_dashboard_home_login')}}" data-validate="parsley" method="post">
          <div class="form-group has-feedback">
            <input type="text"  id="username" name="username" class="form-control" placeholder="Email"/>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe"/>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="row">
            <div class="col-xs-8">    
              <div class="checkbox icheck">
                <label>
                  <input type="checkbox" id="remember" name="remember" value="remember-me"> Se souvenir de moi
                </label>
              </div>                        
            </div><!-- /.col -->
            <div class="col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Connexion </button>
            </div><!-- /.col -->
          </div>
        </form>



      </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    {% if name is defined%}
    <div class="alert-info fade in">
        <strong>{{name}}</strong>
    </div>
    {%endif%}

    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
  </body>
 {%endblock%}