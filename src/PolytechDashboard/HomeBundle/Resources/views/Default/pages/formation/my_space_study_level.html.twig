<button onclick="f('id_navbar_onglets')">Get Hauteur</button>
<script type="text/javascript">
    function getHauteur(ID){
        var div_navbar = document.getElementById(ID);
        var hauteur = -1;
        if(div_navbar.offsetHeight){
            hauteur=div_navbar.offsetHeight;
        }
        else if(div_navbar.style.pixelHeight){
            hauteur=div_navbar.style.pixelHeight;
        }
        return hauteur;
    }

    function f(ID){
        var hauteur = getHauteur(ID);
        alert(hauteur);
    }

</script>
