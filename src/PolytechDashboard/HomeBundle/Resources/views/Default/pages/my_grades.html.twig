<!-- Content Header (Page header) -->
<section class="content-header">
	<h1>
		Mes notes <small>Dernière mise à jour : 16/04/2015</small>
	</h1>
</section>

<!-- Content -->
<section class="contenu">
	<table class="table table-note" style="width: 85%;">
		<thead>
			<tr class="entete">
				<th style="width: 80%;">Matière</th>
				<th>Moyenne</th>
				<th>Coefficient</th>
			</tr>
		</thead>

		<tbody>
			<!-- boucle sur toutes les notes de l'�tudiant -->
			{% for grade in myGrades %}
			<tr class="sous_ensemble">
				<th style="text-align: left; padding-left: 20px;">{{
					grade.cours.getNomcours()}}</th>
				<th>-/20</th>
				<th>{{ grade.cours.getCoefficient() }}</th>
			</tr>
			<tr class="contenu_matiere">
				<td style="text-align: left; padding-left: 30px;">{{
					grade.detailNote.getDetail()}}</td>
				<td>{{ grade.note.getNote() }}/20</td>
				<td>{{ grade.detailNote.getPourcentage() }}%</td>
			</tr>
			{% else %}
			<tr class="sous_ensemble">
				<th style="text-align: left; padding-left: 20px;">Aucune note
					trouv�e</th>
			</tr>
			{% endfor %}


		</tbody>
	</table>

</section>
